<UserControl
    x:Class="GlobalNET.Pages.LicenseAlgorithmListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:GlobalNET.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="True"
                AutoGeneratedColumns="DgListView_Translate"
                IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick"
                SelectionChanged="DgListView_SelectionChanged"
                SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="110" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Button
                x:Name="btn_connect"
                Grid.Row="0"
                Grid.Column="0"
                Width="100"
                Height="26"
                Margin="0,0,0,0"
                Padding="0"
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                
                Click="Connect_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Label
                x:Name="lbl_id"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="False"
                ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_address"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                Name="cb_address"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false"
                DisplayMemberPath="CompanyName"
                IsEnabled="true"
                ItemsSource="{Binding Path=AddressList}"
                SelectedValuePath="Id" />

            <Label
                x:Name="lbl_item"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_item"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false"
                Controls:TextBoxHelper.IsWaitingForData="True"
                DisplayMemberPath="Name"
                IsEnabled="true"
                SelectedValuePath="Id" />

            <Label
                x:Name="lbl_name"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_name"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                MaxLength="30" />

            <Label
                x:Name="lbl_validFrom"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker
                x:Name="dp_validFrom"
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.UseFloatingWatermark="false"
                Controls:TextBoxHelper.Watermark=""
                AutoCloseCalendar="True"
                CalendarDisplayMode="Month"
                Format="Custom"
                FormatString="dd.MM.yyyy"
                IsTabStop="True"
                TabIndex="20"
                TextAlignment="Left"
                TimePickerVisibility="Hidden" />

            <Label
                x:Name="lbl_validTo"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker
                x:Name="dp_validTo"
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.UseFloatingWatermark="false"
                Controls:TextBoxHelper.Watermark=""
                AutoCloseCalendar="True"
                CalendarDisplayMode="Month"
                Format="Custom"
                FormatString="dd.MM.yyyy"
                IsTabStop="True"
                TabIndex="20"
                TextAlignment="Left"
                TimePickerVisibility="Hidden" />

            <Button
                x:Name="btn_execute"
                Grid.Row="6"
                Grid.Column="0"
                Width="100"
                Height="26"
                Margin="0,5,5,0"
                Padding="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                
                Click="Execute_Click"
                IsEnabled="False"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Label
                x:Name="lbl_algorithm"
                Grid.Row="6"
                Grid.Column="0"
                Margin="0,30,5,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_algorithm"
                Grid.Row="6"
                Grid.Column="1"
                Height="80"
                Margin="0,2,0,2"
                VerticalAlignment="Top"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                VerticalScrollBarVisibility="Auto">
                <TextBox.ToolTip>
                    <TextBlock>
                        HELP<LineBreak />
                        Write SQL Command as SELECT 1; Max Command length is 2000Chars, Max UnlocKeyLength is 50Chars.<LineBreak />
                        ALGORITHM EXAMPLE<LineBreak />
                        SELECT CONCAT(CAST((YEAR(GETDATE()) * MONTH(GETDATE()) * DAY(GETDATE())) as varchar(100)),'-SOMETEXT-',CAST(YEAR(GETDATE()) as varchar(4)));<LineBreak />
                    </TextBlock>
                </TextBox.ToolTip>
            </TextBox>
            <Label
                x:Name="lbl_resultSQL"
                Grid.Row="6"
                Grid.Column="1"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                FontSize="16"
                FontWeight="Bold" />
            <iconPacks:PackIconMaterial
                x:Name="ip_copyToClip"
                Grid.Row="6"
                Grid.Column="1"
                Width="25"
                Height="25"
                Margin="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Cursor="Hand"
                Foreground="{DynamicResource AccentBaseColorBrush}"
                Kind="Clipboard"
                MouseLeftButtonUp="CopyToClipClick"
                ToolTip="Copy to Clipboard" />

            <Label
                x:Name="lbl_description"
                Grid.Row="7"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="tb_description"
                Grid.Row="7"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_limitActive"
                Grid.Row="8"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_limitActive"
                Grid.Row="8"
                Grid.Column="1"
                VerticalAlignment="Center"
                Checked="LimitActive_Checked"
                Unchecked="LimitActive_Unchecked" />

            <Label
                x:Name="lbl_activationLimit"
                Grid.Row="9"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_activationLimit"
                Grid.Row="9"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true"
                HasDecimals="False"
                IsEnabled="False"
                Maximum="9999999999"
                NumericInputMode="Numbers"
                SelectAllOnFocus="True" />

            <Label
                x:Name="lbl_usedCount"
                Grid.Row="10"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_usedCount"
                Grid.Row="10"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False"
                HasDecimals="False"
                HideUpDownButtons="True"
                IsEnabled="False"
                Maximum="9999999999"
                NumericInputMode="Numbers" />

            <Label
                x:Name="lbl_active"
                Grid.Row="11"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_active"
                Grid.Row="11"
                Grid.Column="1"
                VerticalAlignment="Center" />

            <Button
                Name="btn_save"
                Grid.Row="20"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel"
                Grid.Row="20"
                Grid.Column="1"
                Width="200"
                Height="40"
                Margin="44,21,44,44"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>