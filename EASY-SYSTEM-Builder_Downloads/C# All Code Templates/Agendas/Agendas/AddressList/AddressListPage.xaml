<UserControl
    x:Class="GlobalNET.Pages.AddressListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="500"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid Style="{StaticResource DefaultSystemGridStyle}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                 AutoGeneratedColumns="DgListView_Translate" MouseDoubleClick="DgListView_MouseDoubleClick" SelectionChanged="DgListView_SelectionChanged" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id" Grid.Row="0" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <Controls:NumericUpDown
                x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" HideUpDownButtons="True" IsEnabled="False" ToolTip="This unique identification is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_companyName" Grid.Row="1" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_companyName" Grid.Row="1" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_contactName" Grid.Row="2" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_contactName" Grid.Row="2" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_street" Grid.Row="3" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_street" Grid.Row="3" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_city" Grid.Row="4" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_city" Grid.Row="4" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_postCode" Grid.Row="5" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_postCode" Grid.Row="5" Grid.Column="1" Margin="0,2,0,2"
                Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" />

            <Label
                x:Name="lbl_phone" Grid.Row="6" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_phone" Grid.Row="6" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_email" Grid.Row="7" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_email" Grid.Row="7" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_bankAccount" Grid.Row="8" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_bankAccount" Grid.Row="8" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_addressType" Grid.Row="9" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <ComboBox
                Name="cb_addressType" Grid.Row="9" Grid.Column="1" Margin="0,2,0,2"
                Style="{StaticResource DefaultSystemComboBoxStyle}"
                DisplayMemberPath="Name" IsEnabled="true"
                ItemsSource="{Binding Path=documentType}"
                SelectedValuePath="Value" />

            <Label
                x:Name="lbl_ico" Grid.Row="10" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_ico" Grid.Row="10" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_dic" Grid.Row="11" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <TextBox
                x:Name="txt_dic" Grid.Row="11" Grid.Column="1" Style="{StaticResource DefaultSystemTextBoxStyle}" />

            <Label
                x:Name="lbl_active" Grid.Row="12" Grid.Column="0" Style="{StaticResource DefaultSystemLabelStyle}" />
            <CheckBox
                x:Name="chb_active" Grid.Row="12" Grid.Column="1" VerticalAlignment="Center" />

            <Button
                Name="btn_save" Grid.Row="20" Grid.Column="0" Width="200" Height="40"
                Style="{StaticResource DefaultSystemSaveButtonStyle}" Click="BtnSave_Click" />
            <Button
                Name="btn_cancel" Grid.Row="20" Grid.Column="1" Width="200" Height="40"
                Margin="44,21,44,44" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <!--Style="{DynamicResource AccentedSquareButtonStyle}"-->
        </Grid>
    </Grid>
</UserControl>