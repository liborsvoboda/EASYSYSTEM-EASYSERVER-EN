<UserControl
    x:Class="GlobalNET.Pages.PartListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GlobalNET.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    d:DesignHeight="700"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="True"
                AutoGeneratedColumns="DgListView_Translate"
                IsReadOnly="True"
                MinColumnWidth="200"
                MouseDoubleClick="DgListView_MouseDoubleClick"
                SelectionChanged="DgListView_SelectionChanged"
                SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="False"
                IsTabStop="True"
                TabIndex="10"
                ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_workPlace"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_workPlace"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="True"
                IsTabStop="True"
                SelectAllOnFocus="True"
                TabIndex="15" />

            <Label
                x:Name="lbl_partNumber"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="tb_partNumber"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                IsTabStop="True"
                TabIndex="20" />

            <Label
                x:Name="lbl_name"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="tb_name"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                IsTabStop="True"
                TabIndex="40" />

            <!--  Form buttons  -->
            <Button
                Name="btn_saveNext"
                Grid.Row="12"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                
                Click="BtnSaveNext_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="55">
                <Button.ToolTip>
                    <TextBlock>Save and next new</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                Name="btn_save"
                Grid.Row="13"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                
                Click="BtnSave_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="60">
                <Button.ToolTip>
                    <TextBlock>Save configuration</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                Name="btn_cancel"
                Grid.Row="13"
                Grid.Column="1"
                Width="200"
                Height="40"
                Margin="44,21,44,44"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="70" />

            <TextBlock
                x:Name="tbOutputMessageBox"
                Grid.Row="12"
                Grid.RowSpan="1"
                Grid.Column="1"
                Margin="5,10,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontWeight="Bold"
                TextWrapping="Wrap" />
        </Grid>
        <Controls:ProgressRing
            x:Name="progressRing"
            Grid.Row="0"
            Grid.RowSpan="14"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="150"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden" />
    </Grid>
</UserControl>