<UserControl
    x:Class="GlobalNET.Pages.OperationListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GlobalNET.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    HorizontalContentAlignment="Stretch"
    d:DesignHeight="700"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="True"
                AutoGeneratedColumns="DgListView_Translate"
                IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick"
                SelectionChanged="DgListView_SelectionChanged"
                SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="False"
                IsTabStop="True"
                TabIndex="10"
                ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_workPlace"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_workPlace"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                GotFocus="Tb_WorkPlace_GotFocus"
                IsEnabled="True"
                IsTabStop="True"
                PreviewKeyDown="WorkPlace_KeyDown"
                TabIndex="15"
                TextChanged="Tb_WorkPlace_GotFocus" />

            <Label
                x:Name="lbl_partNumber"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <WrapPanel
                x:Name="partPanel"
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <TextBox
                    x:Name="tb_partNumber"
                    Width="{Binding Path=ActualWidth, ElementName=partPanel}"
                    Height="30"
                    Margin="0,2,0,2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    HorizontalContentAlignment="Stretch"
                    Controls:TextBoxHelper.ClearTextButton="true"
                    Controls:TextBoxHelper.IsWaitingForData="True"
                    Controls:TextBoxHelper.Watermark=""
                    GotFocus="Tb_PartNumber_GotFocus"
                    IsTabStop="True"
                    PreviewKeyDown="PartNumber_KeyDown"
                    TabIndex="20"
                    TextChanged="Tb_PartNumber_GotFocus" />
                <Label
                    x:Name="lbl_partName"
                    Width="{Binding Path=ActualWidth, ElementName=partPanel}"
                    Height="30"
                    HorizontalAlignment="Stretch" />
            </WrapPanel>

            <Label
                x:Name="lbl_operationNumber"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_operationNumber"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="True"
                IsTabStop="True"
                NumericInputMode="Numbers"
                TabIndex="30" />

            <Label
                x:Name="lbl_note"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="tb_note"
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                IsTabStop="True"
                TabIndex="40" />

            <Label
                x:Name="lbl_pcsPerHour"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_pcsPerHour"
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                GotFocus="PcsPerHour_SelectAll"
                HideUpDownButtons="False"
                IsEnabled="True"
                IsTabStop="True"
                NumberSubstitution.Substitution="Context"
                NumericInputMode="Numbers"
                SelectAllOnFocus="True"
                TabIndex="50" />

            <Label
                x:Name="lbl_kcPerKs"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_kcPerKs"
                Grid.Row="6"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                GotFocus="KcPerKs_SelectAll"
                HasDecimals="True"
                IsEnabled="True"
                IsTabStop="True"
                NumericInputMode="Decimal"
                SelectAllOnFocus="True"
                TabIndex="60" />

            <!--  Search views  -->
            <ListView
                x:Name="lv_workPlaceSearchResults"
                Grid.Row="1"
                Grid.RowSpan="8"
                Grid.Column="1"
                Margin="0,27,0,5"
                BorderBrush="Black"
                BorderThickness="2"
                DisplayMemberPath="WorkPlace"
                IsTabStop="False"
                MouseDoubleClick="MouseSelectWorkPlace_Click"
                PreviewKeyDown="SelectWorkPlace_Enter"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedValuePath="WorkPlace"
                TabIndex="0"
                Visibility="Hidden" />

            <ListView
                x:Name="lv_partNumberSearchResults"
                Grid.Row="2"
                Grid.RowSpan="7"
                Grid.Column="1"
                Margin="0,30,0,5"
                BorderBrush="Black"
                BorderThickness="2"
                DisplayMemberPath="PartNumber"
                IsTabStop="False"
                MouseDoubleClick="MouseSelectPartNumber_Click"
                PreviewKeyDown="SelectPartNumber_Enter"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedValuePath="PartNumber"
                TabIndex="0"
                Visibility="Hidden" />

            <!--  Form buttons  -->
            <Button
                Name="btn_saveNext"
                Grid.Row="11"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                
                Click="BtnSaveNext_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="70">
                <Button.ToolTip>
                    <TextBlock>Save and next new</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                Name="btn_save"
                Grid.Row="12"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                
                Click="BtnSave_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="80">
                <Button.ToolTip>
                    <TextBlock>Save configuration</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button
                Name="btn_cancel"
                Grid.Row="12"
                Grid.Column="1"
                Width="200"
                Height="40"
                Margin="44,21,44,44"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                IsTabStop="True"
                Style="{DynamicResource AccentedSquareButtonStyle}"
                TabIndex="90" />

            <TextBlock
                x:Name="tbOutputMessageBox"
                Grid.Row="11"
                Grid.RowSpan="1"
                Grid.Column="1"
                Margin="5,10,5,5"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontWeight="Bold"
                TextWrapping="Wrap" />
        </Grid>
        <Controls:ProgressRing
            x:Name="progressRing"
            Grid.Row="0"
            Grid.RowSpan="14"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="150"
            Margin="0,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Hidden" />
    </Grid>
</UserControl>