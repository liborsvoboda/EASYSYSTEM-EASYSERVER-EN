<UserControl x:Class="PRUVODKY.PersonListPage"
             Name="Form"
             Tag="Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600"
             HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
             xmlns:local="clr-namespace:PRUVODKY"
             VerticalAlignment="Stretch">

    <Grid Margin="0" Background="{DynamicResource AccentColorBrush}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid x:Name="DgListView" SelectionMode="Single" IsReadOnly="True" VerticalAlignment="Top" Width="{Binding Path=ActualWidth, ElementName=Form}"
            Height="{Binding Path=ActualHeight, ElementName=Form}" SelectionChanged="DgListView_SelectionChanged" MouseDoubleClick="DgListView_MouseDoubleClick" HorizontalAlignment="Left"
            AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" MinColumnWidth="150" />
        </Grid>

        <Grid x:Name="ListForm" Visibility="Visible" Background="{DynamicResource WhiteBrush}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition />
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsTabStop="True" TabIndex="10" 
                                    IsEnabled="False" HideUpDownButtons="True" Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" 
                                    ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label x:Name="lbl_group" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="tb_group" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true" IsTabStop="True"
                     Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" TabIndex="20" PreviewKeyDown="PersonListPage_KeyDown"
                     GotFocus="Tb_group_GotFocus" TextChanged="Tb_group_GotFocus" />

            <Label x:Name="lbl_personalNumber" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_personalNumber" Grid.Row="2" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" Controls:TextBoxHelper.IsWaitingForData="True"
                                    IsEnabled="True" HideUpDownButtons="True" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" IsTabStop="True" TabIndex="30"
                                    />
            
            <Label x:Name="lbl_name" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="tb_name" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true" TabIndex="40" IsTabStop="True"
                     Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" />

            <Label x:Name="lbl_surname" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="tb_surname" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.ClearTextButton="true" TabIndex="50" IsTabStop="True"
                     Controls:TextBoxHelper.IsWaitingForData="True" Controls:TextBoxHelper.Watermark="" />

            <!-- Search views -->
            <ListView x:Name="lv_groupSearchResults" Margin="0,27,0,5" Grid.Row="1" Grid.Column="1" Grid.RowSpan="6" Visibility="Hidden" PreviewKeyDown="SelectGroup_Enter" DisplayMemberPath="Name" SelectedValuePath="Id"
                      IsTabStop="True" TabIndex="25" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="2" MouseDoubleClick="MouseSelectGroup_Click" />

            
            
            
            <!--Form buttons-->
            <Button Grid.Row="6" Name="btn_saveNext" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" TabIndex="55" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom"  Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSaveNext_Click" >
                <Button.ToolTip>
                    <TextBlock> Save and next new</TextBlock>
                </Button.ToolTip>
            </Button>
            
            <Button Grid.Row="7" Name="btn_save" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" TabIndex="60" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom"  Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click" >
                <Button.ToolTip>
                    <TextBlock> Save configuration</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button Grid.Row="7" Name="btn_cancel" Grid.Column="1" HorizontalAlignment="Right" Margin="44,21,44,44" Width="200" TabIndex="70" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Click="BtnCancel_Click" >
            </Button>

            <TextBlock Grid.Row="6" Grid.RowSpan="1" x:Name="tbOutputMessageBox" Margin="5,10,5,5" HorizontalAlignment="Stretch" TextWrapping="Wrap"
                   VerticalAlignment="Stretch" Grid.Column="1" FontWeight="Bold"/>
        </Grid>
        <Controls:ProgressRing x:Name="progressRing" Visibility="Hidden" Width="150" Height="150" Grid.Row="0" Grid.Column="0" Grid.RowSpan="14" Grid.ColumnSpan="2"
						   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
    </Grid>
</UserControl>
