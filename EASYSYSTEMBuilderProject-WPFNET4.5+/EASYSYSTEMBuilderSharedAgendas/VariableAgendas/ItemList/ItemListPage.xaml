<UserControl
    x:Class="GlobalNET.Pages.ItemListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="clr-namespace:System.Media;assembly=System"
    xmlns:local="clr-namespace:GlobalNET.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="Form"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="700"
    d:DesignWidth="600"
    Tag="Form"
    mc:Ignorable="d">

    <Grid
        Margin="0"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch"
        Background="{DynamicResource AccentColorBrush}">
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid
                x:Name="DgListView"
                Width="{Binding Path=ActualWidth, ElementName=Form}"
                Height="{Binding Path=ActualHeight, ElementName=Form}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                AutoGenerateColumns="True"
                AutoGeneratedColumns="DgListView_Translate"
                IsReadOnly="True"
                MouseDoubleClick="DgListView_MouseDoubleClick"
                SelectionChanged="DgListView_SelectionChanged"
                SelectionMode="Single" />
        </Grid>

        <Grid
            x:Name="ListForm"
            Background="{DynamicResource WhiteBrush}"
            Visibility="Visible">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="80" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="110" />
            </Grid.RowDefinitions>

            <Label
                x:Name="lbl_id"
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_id"
                Grid.Row="0"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="False"
                Controls:TextBoxHelper.Watermark=""
                HideUpDownButtons="True"
                IsEnabled="False"
                ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label
                x:Name="lbl_partNumber"
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_partNumber"
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                MaxLength="50" />

            <Label
                x:Name="lbl_name"
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_name"
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="true"
                Controls:TextBoxHelper.IsWaitingForData="True"
                Controls:TextBoxHelper.Watermark=""
                MaxLength="150" />

            <Label
                x:Name="lbl_unit"
                Grid.Row="3"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_unit"
                Grid.Row="3"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false"
                Controls:TextBoxHelper.IsWaitingForData="True"
                DisplayMemberPath="Name"
                IsEnabled="true"
                SelectedValuePath="Name" />

            <Label
                x:Name="lbl_price"
                Grid.Row="4"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown
                x:Name="txt_price"
                Grid.Row="4"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalContentAlignment="Left"
                Controls:TextBoxHelper.ClearTextButton="true"
                HasDecimals="True"
                Maximum="9999999999.99"
                NumericInputMode="Decimal"
                SelectAllOnFocus="True"
                StringFormat="N2"
                ValueChanged="PriceValueChanged" />

            <Label
                x:Name="lbl_currency"
                Grid.Row="5"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_currency"
                Grid.Row="5"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Controls:TextBoxHelper.ClearTextButton="false"
                Controls:TextBoxHelper.IsWaitingForData="True"
                DisplayMemberPath="Name"
                IsEnabled="true"
                SelectedValuePath="Id"
                SelectionChanged="PriceCurrencyChanged" />

            <Label
                x:Name="lbl_vat"
                Grid.Row="6"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <ComboBox
                x:Name="cb_vat"
                Grid.Row="6"
                Grid.Column="1"
                Margin="0,2,0,2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Controls:TextBoxHelper.ClearTextButton="false"
                Controls:TextBoxHelper.IsWaitingForData="True"
                DisplayMemberPath="Name"
                IsEnabled="true"
                SelectedValuePath="Id"
                SelectionChanged="PriceVatChanged" />

            <Label
                x:Name="lbl_priceWithVat"
                Grid.Row="7"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <Label
                x:Name="val_priceWithVat"
                Grid.Row="7"
                Grid.Column="1"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left"
                ContentStringFormat="N2"
                FontSize="14"
                FontWeight="Bold" />

            <Label
                x:Name="lbl_description"
                Grid.Row="8"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <TextBox
                x:Name="txt_description"
                Grid.Row="8"
                Grid.Column="1"
                Margin="0,2,0,2"
                Controls:TextBoxHelper.ClearTextButton="True"
                Controls:TextBoxHelper.Watermark=""
                AcceptsReturn="True"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />

            <Label
                x:Name="lbl_active"
                Grid.Row="9"
                Grid.Column="0"
                HorizontalAlignment="Right"
                HorizontalContentAlignment="Right" />
            <CheckBox
                x:Name="chb_active"
                Grid.Row="9"
                Grid.Column="1"
                VerticalAlignment="Center" />

            <Label
                x:Name="lbl_attachments"
                Grid.Row="10"
                Grid.Column="0"
                HorizontalAlignment="Center"
                HorizontalContentAlignment="Right"
                FontSize="16" />
            <Button
                x:Name="btn_delete"
                Grid.Row="10"
                Grid.Column="1"
                Width="100"
                Height="28"
                Margin="0,2,5,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Controls:ButtonHelper.PreserveTextCase="True"
                Click="BtnDelete_Click"
                IsEnabled="False"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                x:Name="btn_export"
                Grid.Row="10"
                Grid.Column="1"
                Width="100"
                Height="28"
                Margin="5,2,5,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Controls:ButtonHelper.PreserveTextCase="True"
                Click="BtnExport_Click"
                IsEnabled="False"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                x:Name="btn_browse"
                Grid.Row="10"
                Grid.Column="1"
                Width="100"
                Height="28"
                Margin="0,2,0,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Controls:ButtonHelper.PreserveTextCase="True"
                Click="BtnBrowse_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />

            <!--  Attachments  -->
            <TreeView
                x:Name="tv_attachments"
                Grid.Row="11"
                Grid.Column="0"
                Margin="0"
                Padding="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DisplayMemberPath="FileName"
                FontSize="14" />
            <HelixToolkit:HelixViewport3D
                x:Name="viewPort3d"
                Grid.Row="11"
                Grid.Column="1"
                Margin="0"
                HorizontalContentAlignment="Stretch"
                Background="Transparent"
                CameraRotationMode="Trackball"
                IsEnabled="False"
                IsHeadLightEnabled="True"
                IsMoveEnabled="False"
                IsTopBottomViewOrientedToFrontBack="True"
                RotateAroundMouseDownPoint="True"
                ShowViewCube="True"
                Visibility="Hidden"
                ZoomAroundMouseDownPoint="True"
                ZoomExtentsWhenLoaded="True" />
            <WebBrowser
                x:Name="webViewer"
                Grid.Row="11"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                IsEnabled="False"
                Visibility="Hidden" />




            <Button
                Name="btn_save"
                Grid.Row="13"
                Grid.Column="0"
                Width="200"
                Height="40"
                Margin="44,21,0,44"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Controls:ButtonHelper.PreserveTextCase="True"
                Click="BtnSave_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
            <Button
                Name="btn_cancel"
                Grid.Row="13"
                Grid.Column="1"
                Width="200"
                Height="40"
                Margin="44,21,44,44"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnCancel_Click"
                Style="{DynamicResource AccentedSquareButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>
