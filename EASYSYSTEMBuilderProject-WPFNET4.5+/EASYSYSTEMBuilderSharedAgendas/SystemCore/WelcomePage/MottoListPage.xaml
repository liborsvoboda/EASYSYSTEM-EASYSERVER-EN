        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{DynamicResource ProgressAnimation}" Storyboard.Target="{DynamicResource ProgressAnimation}" Storyboard.TargetProperty="{Binding ElementName=mottoListPage, Mode=OneWay}" />
            <BeginStoryboard Storyboard="{DynamicResource LogoAnimation}" Storyboard.Target="{DynamicResource LogoAnimation}" Storyboard.TargetProperty="{Binding ElementName=mottoListPage, Mode=OneWay}" />
            <BeginStoryboard Storyboard="{DynamicResource StartAnimation}" Storyboard.Target="{DynamicResource StartAnimation}" Storyboard.TargetProperty="{Binding ElementName=mottoListPage, Mode=OneWay}" />
        </EventTrigger>
    </Controls:MetroWindow.Triggers>-->

    <Grid x:Name="grid">
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="White"  Offset="0"/>
                <GradientStop Color="Gray"  Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="100" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Rectangle x:Name="rectangle" Width="70" Height="70" Style="{StaticResource WelcomeRectangleStyle}" Margin="0,0,3,3" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Column="1" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" StrokeThickness="0">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
                    <GradientStop Color="{DynamicResource TileGradientColorEnd100}" Offset="1"/>
                    <GradientStop Color="{DynamicResource TileGradientColorStart30}" Offset="0.3"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Rectangle x:Name="rectangle1" Width="60" Height="60" Style="{StaticResource WelcomeRectangleStyle}" Margin="3,0,0,3" VerticalAlignment="Bottom" HorizontalAlignment="Left" Grid.Column="2" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" StrokeThickness="0">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
