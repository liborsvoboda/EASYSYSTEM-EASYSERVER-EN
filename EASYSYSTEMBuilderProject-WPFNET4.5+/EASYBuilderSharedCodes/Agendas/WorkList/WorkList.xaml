<UserControl x:Class="PRUVODKY.WorkListPage"
             Name="Form"
             Tag="Form"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="600"
             HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch"
             xmlns:local="clr-namespace:PRUVODKY"
             VerticalAlignment="Stretch">

    <Grid Margin="0" Background="{DynamicResource AccentColorBrush}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" >
        <Grid x:Name="ListView" Visibility="Visible">
            <DataGrid x:Name="DgListView" SelectionMode="Single" IsReadOnly="True" VerticalAlignment="Top" Width="{Binding Path=ActualWidth, ElementName=Form}"
            Height="{Binding Path=ActualHeight, ElementName=Form}" SelectionChanged="DgListView_SelectionChanged" MouseDoubleClick="DgListView_MouseDoubleClick" HorizontalAlignment="Left"
            AutoGenerateColumns="True" AutoGeneratedColumns="DgListView_Translate" />
        </Grid>

        <Grid x:Name="ListForm" Visibility="Visible" Background="{DynamicResource WhiteBrush}" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition />
                <RowDefinition Height="110"/>
            </Grid.RowDefinitions>

            <Label x:Name="lbl_id" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_id" Grid.Row="0" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsTabStop="True" TabIndex="10" 
                                    IsEnabled="False" HideUpDownButtons="True" Controls:TextBoxHelper.ClearTextButton="False" Controls:TextBoxHelper.Watermark="" 
                                    ToolTip="This unique identificator is read only value which is filled automatically by system" />

            <Label x:Name="lb_date" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:DateTimePicker x:Name="dp_date" Grid.Row="1" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.UseFloatingWatermark="false" TextAlignment="Left"
                                Controls:TextBoxHelper.Watermark="" Format="ShortDate" AutoCloseCalendar="True" CalendarDisplayMode="Month"
                                 IsTabStop="True" TabIndex="20" />
            
            <Label x:Name="lbl_personalNumber" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <WrapPanel x:Name="partPanel" Grid.Row="2" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <TextBox x:Name="txt_personalNumber" Margin="0,2,0,2" HorizontalContentAlignment="Stretch" IsTabStop="True" TabIndex="30" Height="30" VerticalAlignment="Top"
                                    IsEnabled="True" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" PreviewKeyDown="PersonalNumber_KeyDown"
                                    GotFocus="Tb_PersonalNumber_GotFocus" TextChanged="Tb_PersonalNumber_GotFocus" Width="{Binding Path=ActualWidth, ElementName=partPanel}" />
                <Label x:Name="lbl_fullName" HorizontalAlignment="Stretch" Height="30" Width="{Binding Path=ActualWidth, ElementName=partPanel}" Padding="0,2,0,0" FontSize="16" FontWeight="Bold" />
            </WrapPanel>

            <Label x:Name="lbl_workPlace" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <TextBox x:Name="txt_workPlace" Grid.Row="3" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsTabStop="True" TabIndex="40"
                                    IsEnabled="True" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark=""
                                    GotFocus="Tb_WorkPlace_GotFocus" TextChanged="Tb_WorkPlace_GotFocus" PreviewKeyDown="WorkPlace_KeyDown" />

            <Label x:Name="lbl_operationNumber" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_operationNumber" Grid.Row="4" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsEnabled="False"
                                    HideUpDownButtons="False" Interval="10" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="" SelectAllOnFocus="True"
                                    IsTabStop="False" TabIndex="50" ValueChanged="txt_Calculation_ValueChanged" />

            <Label x:Name="lb_workTime" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <xctk:TimeSpanUpDown x:Name="dp_workTime" Grid.Row="5" Grid.Column="1" Margin="0,2,0,2" Controls:TextBoxHelper.UseFloatingWatermark="false" TextAlignment="Left"
                                Controls:TextBoxHelper.Watermark="" AllowSpin="True" ShowSeconds="False" ShowDays="False" Minimum="00:01:00" Maximum="23:59:59" FractionalSecondsDigitsCount="0" ShowButtonSpinner="True"
                                IsTabStop="True" TabIndex="60" ValueChanged="dp_Calculation_ValueChanged" />

            <Label x:Name="lbl_pcs" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Right" HorizontalContentAlignment="Right" />
            <Controls:NumericUpDown x:Name="txt_pcs" Grid.Row="6" Grid.Column="1" Margin="0,2,0,2" HorizontalContentAlignment="Left" IsTabStop="True" TabIndex="70"
                                    IsEnabled="True" HideUpDownButtons="False" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark=""
                                    SelectAllOnFocus="True" GotFocus="Pcs_SelectAll" NumericInputMode="Numbers" ValueChanged="txt_Calculation_ValueChanged" />
            
            <DockPanel x:Name="workResult" Grid.Row="7" Grid.Column="1" Height="30" HorizontalAlignment="Stretch">
                <Label x:Name="lbl_amount" HorizontalAlignment="Left" HorizontalContentAlignment="Left" FontSize="16" FontWeight="DemiBold"/>
                <Label x:Name="lbl_normPerHour" HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" FontSize="16" FontWeight="DemiBold" />
                <Label x:Name="lbl_workPower" HorizontalAlignment="Right" HorizontalContentAlignment="Right" FontSize="16" FontWeight="DemiBold" />
            </DockPanel>

            <!-- Search views -->
            <ListView x:Name="lv_personalNumberSearchResults" Margin="0,30,0,5" Grid.Row="2" Grid.Column="1" Grid.RowSpan="7" Visibility="Hidden" PreviewKeyDown="SelectPersonalNumber_Enter" DisplayMemberPath="FullInfo" SelectedValuePath="PersonalNumber"
                      IsTabStop="False" TabIndex="0" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="2" MouseDoubleClick="MousePersonalNumber_Click" />
            <ListView x:Name="lv_workPlaceSearchResults" Margin="0,27,0,5" Grid.Row="3" Grid.Column="1" Grid.RowSpan="6" Visibility="Hidden" PreviewKeyDown="SelectWorkPlace_Enter" DisplayMemberPath="WorkPlacePartNumberOperation" SelectedValuePath="WorkPlace"
                      IsTabStop="False" TabIndex="0" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="2" MouseDoubleClick="MouseWorkPlace_Click" />

            
            

            <!--Form buttons-->
            <Button Grid.Row="9" Name="btn_saveNext" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" TabIndex="70" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSaveNext_Click" >
                <Button.ToolTip>
                    <TextBlock> Save and next new</TextBlock>
                </Button.ToolTip>
            </Button>
            
            <Button Grid.Row="10" Name="btn_save" Grid.Column="0" HorizontalAlignment="Left" Margin="44,21,0,44" Width="200" TabIndex="80" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Controls:ButtonHelper.PreserveTextCase="True" Click="BtnSave_Click" >
                <Button.ToolTip>
                    <TextBlock> Save configuration</TextBlock>
                </Button.ToolTip>
            </Button>

            <Button Grid.Row="10" Name="btn_cancel" Grid.Column="1" HorizontalAlignment="Right" Margin="44,21,44,44" Width="200" TabIndex="90" IsTabStop="True"
                Height="40" VerticalAlignment="Bottom" Style="{DynamicResource AccentedSquareButtonStyle}" Click="BtnCancel_Click" >
            </Button>

            <TextBlock Grid.Row="9" Grid.RowSpan="1" x:Name="tbOutputMessageBox" Margin="5,10,5,5" HorizontalAlignment="Stretch" TextWrapping="Wrap"
                   VerticalAlignment="Stretch" Grid.Column="1" FontWeight="Bold"/>
        </Grid>
        <Controls:ProgressRing x:Name="progressRing" Visibility="Hidden" Width="150" Height="150" Grid.Row="0" Grid.Column="0" Grid.RowSpan="11" Grid.ColumnSpan="2"
						   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
    </Grid>
</UserControl>
